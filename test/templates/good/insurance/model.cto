namespace com.acme.insurance.auto@1.0.0

import org.accordproject.money@0.3.0.{MonetaryAmount} from https://models.accordproject.org/money@0.3.0.cto

// dimensions are enumerations

// input variables
// NOT dimensions. i.e. dates, string, numbers (not used in a calculation), booleans
// they are only known at claim time

// units
// used in numeric calculations (numbers)
// they are input variables

enum ItemType {
    o ACCESSORIES
    o SPARE_PARTS
    o CAR
}

enum IncidentType {
    o LOST
    o STOLEN
    o DAMAGED
}

enum BenefitType {
    o REPARIING
    o REPLACING
}

concept BenefitLimit {
    o BenefitType benefitType
    o MonetaryAmount limit
}

@template
concept ClauseData {
    o ItemType[] items
    o IncidentType[] incidents
    o BenefitLimit[] benefitLimits
}