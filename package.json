{
    "name": "@accordproject/template-engine",
    "version": "1.0.8",
    "description": "Generation of AgreementMark from TemplateMark + JSON Data",
    "homepage": "https://github.com/accordproject",
    "engines": {
        "node": ">=14",
        "npm": ">=6"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "clean": "rimraf dist",
        "prebuild": "npm-run-all clean",
        "build": "tsc -p tsconfig.build.json",
        "tsc-template": "tsc --strict --esModuleInterop ./output/full/usercode.ts",
        "minify": "terser ./output/full/usercode.js --compress ecma=2020 --output ./output/full/usercode-min.js",
        "pretest": "npm-run-all licchk lint",
        "lint": "eslint .",
        "licchk": "license-check-and-add",
        "test": "jest",
        "coverage" : "jest --coverage",
        "compile-template": "jest ./test/Compiler.test.ts",
        "compile-js": "jest ./test/TypeScriptCompiler.test.ts",
        "run-template": "jest ./test/Runner.test.ts",
        "test:watch": "jest --watchAll",
        "updateRuntimeDependencies" : "node ./scripts/updateRuntimeDependencies",
        "updateCompiledTemplates" : "rm -rf ./test/compiled-templates/ && mkdir ./test/compiled-templates/ && cp -r ./output/full ./test/compiled-templates/ "
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/accordproject/template-engine.git"
    },
    "keywords": [
        "concerto",
        "tools",
        "modeling"
    ],
    "author": "accordproject.org",
    "license": "Apache-2.0",
    "dependencies": {
        "@accordproject/concerto-core": "^3.6.0",
        "@accordproject/concerto-tools": "^3.6.0",
        "@accordproject/concerto-util": "^3.6.0",
        "@accordproject/markdown-common": "0.16.6-20230317163634",
        "dayjs": "1.11.7",
        "fs-extra": "^11.1.0",
        "jsonpath": "^1.1.1",
        "traverse": "^0.6.7",
        "@typescript/twoslash": "^3.2.1"
    },
    "devDependencies": {
        "terser": "^5.16.6",
        "@accordproject/markdown-html": "^0.16.6-20230317163634",
        "@accordproject/markdown-template": "^0.16.6-20230317163634",
        "@types/fs-extra": "^11.0.1",
        "@types/jest": "^28.1.1",
        "@types/jsonpath": "^0.2.0",
        "@types/semver": "7.3.10",
        "@types/traverse": "^0.6.32",
        "@typescript-eslint/eslint-plugin": "5.27.1",
        "@typescript-eslint/parser": "5.27.1",
        "jest": "28.1.1",
        "license-check-and-add": "2.3.6",
        "mkdirp": "^2.1.3",
        "node-fetch": "^3.3.1",
        "npm-run-all": "4.1.5",
        "rimraf": "3.0.2",
        "ts-jest": "^28.0.4",
        "typescript": "^4.6.3"
    },
    "license-check-and-add-config": {
        "folder": "./src",
        "license": "HEADER",
        "exact_paths_method": "EXCLUDE",
        "exact_paths": [
            "coverage",
            "index.d.ts",
            "LICENSE",
            "node_modules",
            ".nyc-output",
            "out",
            ".tern-project",
            "./mytemplate",
            "./model-gen",
            "output"
        ],
        "file_type_method": "EXCLUDE",
        "file_types": [
            ".yml",
            ".yaml",
            ".zip",
            ".tgz"
        ],
        "insert_license": false,
        "license_formats": {
            "js|ts|njk|pegjs|cto|acl|qry": {
                "prepend": "/*",
                "append": " */",
                "eachLine": {
                    "prepend": " * "
                }
            },
            "npmrc|editorconfig|txt": {
                "eachLine": {
                    "prepend": "# "
                }
            },
            "md": {
                "file": "./HEADER.md"
            }
        }
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "<rootDir>/dist/",
            "/node_modules/",
            "/scripts"
        ],
        "collectCoverage": false,
        "collectCoverageFrom": [
            "src/**/*.ts"
        ]
    }
}
