{
    "name": "@accordproject/template-engine",
    "version": "2.4.1",
    "description": "Generation of AgreementMark from TemplateMark + JSON Data",
    "homepage": "https://github.com/accordproject",
    "engines": {
        "node": ">=18",
        "npm": ">=6"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "clean": "rimraf dist",
        "prebuild": "npm-run-all clean && npm run updateRuntimeDependencies",
        "build": "rollup -c",
        "tsc-template": "tsc --strict --esModuleInterop ./output/full/usercode.ts",
        "minify": "terser ./output/full/usercode.js --compress ecma=2020 --output ./output/full/usercode-min.js",
        "pretest": "npm-run-all licchk lint",
        "lint": "eslint .",
        "licchk": "license-check-and-add",
        "test": "jest",
        "coverage": "jest --coverage",
        "compile-js": "jest ./test/TypeScriptCompiler.test.ts",
        "test:watch": "jest --watchAll",
        "updateRuntimeDependencies": "node ./scripts/updateRuntimeDependencies"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/accordproject/template-engine.git"
    },
    "keywords": [
        "concerto",
        "template",
        "engine",
        "templatemark"
    ],
    "author": "accordproject.org",
    "license": "Apache-2.0",
    "dependencies": {
        "@accordproject/concerto-codegen": "^3.20.0",
        "@accordproject/concerto-core": "^3.16.1",
        "@accordproject/concerto-util": "^3.16.1",
        "@accordproject/markdown-common": "^0.16.22",
        "@accordproject/markdown-template": "^0.16.22",
        "@typescript/twoslash": "^3.2.4",
        "dayjs": "1.11.10",
        "jsonpath": "^1.1.1",
        "tar": "^6.2.0",
        "traverse": "^0.6.8",
        "typescript": "^4"
    },
    "devDependencies": {
        "@accordproject/markdown-html": "^0.16.22",
        "@accordproject/markdown-template": "^0.16.22",
        "@types/jest": "^28.1.1",
        "@types/jsonpath": "^0.2.0",
        "@types/semver": "7.3.10",
        "@types/tar": "^6.1.4",
        "@types/traverse": "^0.6.32",
        "@typescript-eslint/eslint-plugin": "^6.19.0",
        "@typescript-eslint/parser": "^6.19.0",
        "esbuild": "^0.18.12",
        "jest": "28.1.1",
        "license-check-and-add": "2.3.6",
        "mkdirp": "^2.1.3",
        "node-fetch": "^3.3.1",
        "npm-run-all": "4.1.5",
        "rimraf": "3.0.2",
        "rollup": "^3.26.2",
        "rollup-plugin-dts": "^5.3.0",
        "rollup-plugin-esbuild": "^5.0.0",
        "terser": "^5.16.6",
        "ts-jest": "^28.0.4"
    },
    "license-check-and-add-config": {
        "folder": "./src",
        "license": "HEADER",
        "exact_paths_method": "EXCLUDE",
        "exact_paths": [
            "coverage",
            "index.d.ts",
            "LICENSE",
            "node_modules",
            ".nyc-output",
            "out",
            ".tern-project",
            "./mytemplate",
            "./model-gen",
            "output"
        ],
        "file_type_method": "EXCLUDE",
        "file_types": [
            ".yml",
            ".yaml",
            ".zip",
            ".tgz"
        ],
        "insert_license": false,
        "license_formats": {
            "js|ts|njk|pegjs|cto|acl|qry": {
                "prepend": "/*",
                "append": " */",
                "eachLine": {
                    "prepend": " * "
                }
            },
            "npmrc|editorconfig|txt": {
                "eachLine": {
                    "prepend": "# "
                }
            },
            "md": {
                "file": "./HEADER.md"
            }
        }
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "<rootDir>/dist/",
            "/node_modules/",
            "/scripts"
        ],
        "collectCoverage": false,
        "collectCoverageFrom": [
            "src/**/*.ts"
        ]
    }
}
